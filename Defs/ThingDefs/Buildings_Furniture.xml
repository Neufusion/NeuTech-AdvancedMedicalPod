<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

	<!--============================== Beds ==============================-->

	<ThingDef ParentName="BuildingBase">
		<defName>NeuTechAdvMedPod</defName>
		<label>NeuTech - Advanced Medical Pod</label>
		<Description>The Advanced Medical Pod enhances the effectiveness of medical operations and accelerates the healing process. Does NOT induce cryptosleep. Connectable to Vitals Monitor</Description>
		<ThingClass>Building_Bed</ThingClass>
		<graphicData>
			<texPath>Things/Buildings/Furniture/NeuTechAdvMedPod</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<!-- <shaderType>CutoutComplex</shaderType> -->
			<drawSize>(2,3)</drawSize>
			<damageData>
				<rect>(0,0.05,1,1.95)</rect>
			</damageData>
		</graphicData>
		<AltitudeLayer>Building</AltitudeLayer>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<!-- <WorkToBuild>3200</WorkToBuild> -->
			<Flammability>1.0</Flammability>
			<Comfort>0.80</Comfort>
			<BedRestEffectiveness>1.5</BedRestEffectiveness>
			<ImmunityGainSpeedFactor>3</ImmunityGainSpeedFactor>
			<MedicalTendQualityOffset>3</MedicalTendQualityOffset>
		</statBases>
		<Size>(1,2)</Size>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>150</costStuffCount>
		<costList>
			<Steel>100</Steel>
			<Medicine>10</Medicine>
			<Component>10</Component>
			<Plasteel>50</Plasteel>
		</costList>
		<building>
			<Bed_ShowSleeperBody>false</Bed_ShowSleeperBody>
			<bed_healPerDay>200</bed_healPerDay>
			<bed_defaultMedical>true</bed_defaultMedical>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>350</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
				<soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>6</glowRadius>
				<glowColor>(0,255,255,0)</glowColor>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<fillPercent>0.4</fillPercent>
		<PathCost>60</PathCost>
		<LeaveResourcesWhenKilled>True</LeaveResourcesWhenKilled>
		<StaticSunShadowHeight>0.17</StaticSunShadowHeight>
		<CastEdgeShadows>True</CastEdgeShadows>
		<Passability>PassThroughOnly</Passability>
		<DrawGUIOverlay>True</DrawGUIOverlay>
		<researchPrerequisites>
			<li>HospitalBed</li>
		</researchPrerequisites>
		<designationCategory>Furniture</designationCategory>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>

</Buildings>
